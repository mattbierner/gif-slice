{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "baseUrl": "src",
        "declaration": true,
        "outDir": "./out/",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "./src/**/*"
    ]
}